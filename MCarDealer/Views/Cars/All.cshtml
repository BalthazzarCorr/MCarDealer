@model IEnumerable<CarModel>
@{
    ViewData["Title"] = "All Cars";
}

<h2>All</h2>


<table class="table table-bordered table-hover">
    <thead>
    <tr>
        <th>
            Make
        </th>
        <th>
            Model
        </th>
        <th>
            Traveled Distance
        </th>
    </tr>
    </thead>
    <tbody>
    @foreach (var car in Model)
    {
        <tr>
            <th>
                @car.Make
            </th>
            <th>
                @car.Model
            </th>
            <th>
                @(car.TravelledDistance / 1000) KM
            </th>
        </tr>
    }
    </tbody>
</table>
