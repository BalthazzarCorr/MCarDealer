@model PartsPageListingModel
@{
   ViewData["Title"] = "All Parts";
}
<h2>@ViewData["Title"] 

    <a class="btn btn-primary" href="/part/create">Add Part  </a>
</h2>





<table class="table">
    <thead>
        <tr>
            <th>
                Name
            </th>
            <th>
                Price
            </th>
            <th>
                Quantity
            </th>
            <th>
                Supplier
            </th>

        </tr>
    </thead>

    <tbody>
        @foreach (var part in Model.Parts)
        {
        <tr>
            <td>
                @part.Name
            </td>
            <td>
                @part.Price.ToPrice()
            </td>
            <td>
                @part.Quantity
            </td>
            <td>
                @part.SupplierName
            </td>

        </tr>
        }
    </tbody>
</table>


@{
   var previosDisabled = Model.CurrentPage == 1 ? "disabled" : string.Empty;

    var nextDisabled = Model.CurrentPage == Model.TotalPages ? "disabled" : string.Empty;
}



<div class="text-center">
    <ul class="pagination">
        <li class="page-item @previosDisabled" >
            <a class="page-link @previosDisabled" href="/parts/all?pages = @Model.PreviousPage" aria-label="Previous">
                <span aria-hidden="true">&laquo;</span>
                <span class="sr-only">Previous</span>
            </a>
        </li>
        @for (int i = 1; i <= Model.TotalPages; i++)
        {
        <li class="page-item"><a class="page-link" href="/parts/all?page=@i">@i</a></li>
        }

        <li class="page-item @nextDisabled">
            <a class="page-link @nextDisabled" href/parts/all?pages=@Model.NextPage aria-label="Next">
            <span aria-hidden="true">&raquo;</span>
            <span class="sr-only">Next</span>
            </a>
        </li>
    </ul>
</div>
