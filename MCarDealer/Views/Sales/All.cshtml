@model IEnumerable<SaleListModel>
@{
   ViewData["Title"] = "All";
}
<h2>All</h2>

<table class="table table-bordered table-hover">
    <thead>
        <tr>
            <td>
                Customer
            </td>
            <td>
                Discount
            </td>
            <td>
                Price
            </td>
            <td>
                Discounted Price
            </td>
        </tr>
    </thead>
    <tbody>
        @foreach (var sale in Model)
        {
        <tr>
            <td>
                @sale.CustomerName
            </td>
            <td>
                @((sale.Discount + (sale.IsYoungDriver ? 0.05 : 0)).ToPercentage())
            </td>
            <td>
                @sale.Price.ToPrice()
            </td>
            <td>
                @sale.DiscountedPrice.ToPrice()
            </td>
            <td>
                <a class="btn btn-sm btn-default" href ="/sales/@sale.Id">More Details</a>
            </td>
        </tr>
        }
    </tbody>
</table>
